class Solution:
    def coinChange(self, coins: List[int], amount: int) -> int:
        
        coins.sort(reverse=True)
        cal, res = {}, amount
        try:
            for i in coins:
                if amount//i != 0:
                    cal[i] = amount//i
                    res -= i*(amount//i)
                    amount %= i
            return sum(cal.values()) if res == 0  else -1
        except KeyError:
            return 0
            